<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/frag_container"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    tools:context=".fragments.BestCricketerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who is the best cricketer in the world?"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:textSize="25dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/colorGrey"
            android:layout_above="@+id/name_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>

            <RadioButton
                android:id="@+id/option1"
                android:layout_below="@+id/question_text_view"
                android:text="  White"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/option2"
                android:layout_below="@+id/option1"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:text="  Yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/option3"
                android:layout_below="@+id/option2"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:text="  Orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/option4"
                android:layout_below="@+id/option3"
                android:gravity="start|center"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:text="  Green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <Button
        android:id="@+id/next_btn_fragment"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:stateListAnimator="@null"
        android:layout_centerHorizontal="true"
        android:textSize="23dp"
        android:layout_below="@+id/name_edit_text"/>

</RelativeLayout>